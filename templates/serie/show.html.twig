{% extends 'base.html.twig' %}

{% block title %}Serie{% endblock %}

{% block body %}
    <h1>Serie</h1>
    <p>Voici les informations de la série numéro {{serie.id}}</p>
    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ serie.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ serie.description }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ serie.note }}</td>
            </tr>
        </tbody>
    </table>
    <div class="w-100 d-flex justify-content-center">
    <a class="btn btn-primary" href="{{ path('app_serie_index') }}">Retour</a>

    {{ include('serie/_delete_form.html.twig') }}
    </div>
    <h3>Les Episodes :</h3>
    <ul class="list-group">
    {% for episode in serie.episodes %}
    <li class="list-group-item">{{episode}}</li>
    {% endfor %}
    </ul>
    
{% endblock %}
